$color-selected = blue;
$color-black = #333;

.Dualpane {
	// lost-center: 100%;
	// height: 100%;
	display: flex;
	height: 200px;

	&__Navigation {
		lost-column: 10/100 0 0;
		lost-center: 50%;
		margin-right: 0;
		// border-right: 1px solid black;
	}

	&__Menu {
	  margin: 0 auto;
	  padding: 0;
	  list-style: none;
	}

	&__Label {
		cursor: pointer;
		margin: 20px;
		// font-size: 20px;
		font-size: 1rem;
		color: $color-black;

		&--selected {
			color: $color-selected;
		}
	}

	// not float left - right -> column parent ?

	&__Content {
		lost-column: 90/100 0 0;
		lost-align: center;

		// display: inline-block;
		// float: right;
	}

	&__View {
		display: none;
  	width: 95%;
		// height: 100%;

		&--selected {
			display: block;
		}
	}

}
